using Aspose.Pdf;
using Aspose.Pdf.Text;
using Aspose.Pdf.Drawing;
using System;
using System.IO;
using System.Drawing; // TODO: System.Drawing may be platformâ€‘specific; verify compatibility on target runtime.

namespace Examples.Core.AsposePDF.Text;

/// <summary>
/// Demonstrates how to add text with shading colors to an existing PDF document using Aspose.Pdf.
/// </summary>
public class AddTextWithShadingColors
{
    /// <summary>
    /// Executes the example.
    /// </summary>
    public static void Run()
    {
        // Resolve input and output directories relative to the application base directory.
        string baseDir = AppContext.BaseDirectory;
        string inputDir = Path.Combine(baseDir, "data", "inputs");
        string outputDir = Path.Combine(baseDir, "data", "outputs");

        // Ensure the output directory exists.
        try
        {
            Directory.CreateDirectory(outputDir);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Failed to create output directory '{outputDir}': {ex.Message}");
            return;
        }

        string inputPath = Path.Combine(inputDir, "text_sample4.pdf");
        string outputPath = Path.Combine(outputDir, "text_out.pdf");

        if (!File.Exists(inputPath))
        {
            Console.Error.WriteLine($"Input file not found: {inputPath}");
            return;
        }

        try
        {
            // Load the PDF document.
            using Document pdfDocument = new Document(inputPath);

            // Search for the text fragment "Lorem ipsum".
            TextFragmentAbsorber absorber = new TextFragmentAbsorber("Lorem ipsum");
            pdfDocument.Pages.Accept(absorber);

            // Ensure at least two fragments were found (index 1 is the second fragment).
            if (absorber.TextFragments.Count < 2)
            {
                Console.Error.WriteLine("The expected text fragment was not found in the document.");
                return;
            }

            TextFragment textFragment = absorber.TextFragments[1];

            // Apply a gradient axial shading as the foreground color.
            textFragment.TextState.ForegroundColor = new Aspose.Pdf.Color
            {
                PatternColorSpace = new GradientAxialShading(Color.Red, Color.Blue)
            };
            textFragment.TextState.Underline = true;

            // Save the modified document.
            pdfDocument.Save(outputPath);
            Console.WriteLine($"PDF saved successfully to: {outputPath}");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"An error occurred while processing the PDF: {ex.Message}");
        }
    }
}