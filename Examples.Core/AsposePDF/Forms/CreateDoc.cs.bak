using System;
using System.IO;
using Aspose.Pdf;
using Aspose.Pdf.Forms;

namespace Examples.Core.AsposePDF.Forms;

/// <summary>
/// Demonstrates creating a PDF document with a radio button field containing three options.
/// </summary>
public class CreateDoc
{
    /// <summary>
    /// Executes the example.
    /// </summary>
    public static void Run()
    {
        try
        {
            // Create a new document
            Document doc = new Document();
            Page page = doc.Pages.Add();

            // Add radio button field
            RadioButtonField field = new RadioButtonField(page)
            {
                Rect = new Rectangle(40, 650, 100, 720),
                PartialName = "NewField"
            };

            // Add radio button options.
            RadioButtonOptionField opt1 = new RadioButtonOptionField
            {
                Rect = new Rectangle(40, 650, 60, 670),
                OptionName = "Item1",
                Border = new Border(opt1) { Width = 1 },
                Characteristics = { Border = Aspose.Pdf.Color.Black }
            };

            RadioButtonOptionField opt2 = new RadioButtonOptionField
            {
                Rect = new Rectangle(60, 670, 80, 690),
                OptionName = "Item2",
                Border = new Border(opt2) { Width = 1 },
                Characteristics = { Border = Aspose.Pdf.Color.Black }
            };

            RadioButtonOptionField opt3 = new RadioButtonOptionField
            {
                Rect = new Rectangle(80, 690, 100, 710),
                OptionName = "Item3",
                Border = new Border(opt3) { Width = 1 },
                Characteristics = { Border = Aspose.Pdf.Color.Black }
            };

            field.Add(opt1);
            field.Add(opt2);
            field.Add(opt3);
            doc.Form.Add(field);

            // Resolve output path
            string outputDir = Path.Combine(AppContext.BaseDirectory, "data", "outputs");
            Directory.CreateDirectory(outputDir);
            string outputPath = Path.Combine(outputDir, "CreateDoc_out.pdf");

            // Save the PDF document
            doc.Save(outputPath);

            Console.WriteLine($"\nNew doc with 3 items radio button created successfully.\nFile saved at {outputPath}");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}

